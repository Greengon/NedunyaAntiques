<!DOCTYPE html>
<html dir="rtl" lang="he">
    <head>
        <meta charset="UTF-8">
        <meta name="description" content="">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <!-- The above 4 meta tags *must* come first in the head; any other head content must come *after* these tags -->
        <!-- Title  -->
        <title>"נדוניה" עתיקות</title>

        <!-- Favicon  -->
        <link rel="icon" href="~/img/core-img/icon.ico">

        <!-- Core Style CSS -->
        <link rel="stylesheet" href="~/Content/core-style.css" />
        <link rel="stylesheet" href="~/Content/classy-nav.min.css" />
        <link rel="stylesheet" href="~/Content/animate.css" />
        <link rel="stylesheet" href="~/Content/font-awesome.min.css" />
        <link rel="stylesheet" href="~/Content/jquery-ui.min.css" />
        <link rel="stylesheet" href="~/Content/magnific-popup.css" />
        <link rel="stylesheet" href="~/Content/owl.carousel.css" />
        <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
        <link rel="stylesheet" href="~/Content/bootstrap-rtl.css" />
        <link rel="stylesheet" href="~/Content/bootstrap-rtl.css" />
        <link rel="stylesheet" href="~/Content/ourstyle.css" />

        <!-- jQuery (Necessary for All JavaScript Plugins) -->
        <script src="~/Scripts/jquery-3.3.1.min.js"></script>
        <!-- Popper js-->
        <script src="~/Scripts/popper.min.js"></script>
        <!-- Bootstrap js-->
        <script src="~/Scripts/bootstrap.min.js"></script>
        <!-- Plugins js-->
        <script src="~/Scripts/plugins.js"></script>
        <!-- Classy Nav js -->
        <script src="~/Scripts/classy-nav.min.js"></script>
        <!-- Active js-->
        <!--Active script must be loaded after the html or it will crush-->
        <!--defer is the syntax word for that in script class-->
        <script src="~/Scripts/active.js" defer></script>
    </head>

    <body>
        <header class="header_area">
            <div class="classy-nav-container breakpoint-off d-flex align-items-center justify-content-between">
                <!-- Classy Menu -->
                <nav class="classy-navbar" id="essenceNav">

                    <!-- Navbar Toggler -->
                    <div class="classy-navbar-toggler">
                        <span class="navbarToggler"><span></span><span></span><span></span></span>
                    </div>
                    <!-- Logo -->
                    <a class="navbar-brand" href="/home/index"><img class="brand" src="~/img/core-img/logo.png" alt=""></a>
                    <!-- Menu -->
                    <div class="classy-menu">
                        <!-- close btn -->
                        <div class="classycloseIcon">
                            <div class="cross-wrap"><span class="top"></span><span class="bottom"></span></div>
                        </div>
                        <!-- Nav Start -->
                        <div class="classynav titles" style="margin-right:1px">
                            <ul>
                                <li>
                                    <a href="/home/shop">חנות</a>
                                    <div class="megamenu">
                                        <ul class="single-mega cn-col-4">
                                            <li class="title">ריהוט</li>
                                            <li><a href="shop.html">Dresses</a></li>
                                            <li><a href="shop.html">Blouses &amp; Shirts</a></li>
                                            <li><a href="shop.html">T-shirts</a></li>
                                            <li><a href="shop.html">Rompers</a></li>
                                            <li><a href="shop.html">Bras &amp; Panties</a></li>
                                        </ul>
                                        <ul class="single-mega cn-col-4">
                                            <li class="title">כלי מטבח</li>
                                            <li><a href="shop.html">T-Shirts</a></li>
                                            <li><a href="shop.html">Polo</a></li>
                                            <li><a href="shop.html">Shirts</a></li>
                                            <li><a href="shop.html">Jackets</a></li>
                                            <li><a href="shop.html">Trench</a></li>
                                        </ul>
                                        <ul class="single-mega cn-col-4">
                                            <li class="title">דקורציה</li>
                                            <li><a href="shop.html">Dresses</a></li>
                                            <li><a href="shop.html">Shirts</a></li>
                                            <li><a href="shop.html">T-shirts</a></li>
                                            <li><a href="shop.html">Jackets</a></li>
                                            <li><a href="shop.html">Trench</a></li>
                                        </ul>
                                        <div class="single-mega cn-col-4">
                                            <img src="~/img/bg-img/bg-6.jpg" alt="">
                                        </div>
                                    </div>
                                </li>
                                <li><a href="/home/about">אודות</a></li>
                                <li><a href="/home/contact">צור קשר</a></li>
                            </ul>
                        </div>
                        <!-- Nav End -->
                    </div>
                </nav>

                <!-- Header Meta Data -->
                <div class="header-meta d-flex clearfix justify-content-end">
                    <!-- Cart Area -->
                    <div class="cart-area">
                        <a href="#" id="essenceCartBtn"><img src="/img/core-img/bag.svg" alt=""></a>
                    </div>

                    <!-- Search Area -->
                    <div class="search-area">
                        <form action="#" method="post">
                            <input type="search" name="search" id="headerSearch" placeholder="חיפוש באתר">
                            <button type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
                        </form>
                    </div>

                    <!-- Register and log in area -->
                    <div class="guest-area">
                        <div>
                            <p id="gh-ug-flex" class="guest-text">
                                שלום אורח!
                                <a href="/customers/customerLog">התחבר</a>&nbsp;
                                או
                                <a href="/customers/customerForm"> הרשם.</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
    
        </header>
        <!-- ##### Right Side Cart Area ##### -->
        <div class="cart-bg-overlay"></div>

        <div class="right-side-cart-area">

            <!-- Cart Button -->
            <div class="cart-button">
                <a href="#" id="rightSideCart"><img src="/img/core-img/bag.svg" alt=""></a>
            </div>

            <div class="cart-content d-flex">

                <!-- Cart List Area -->
                <div class="cart-list text-right">
                    <!-- Single Cart Item -->
                    <div class="single-cart-item">
                        <a href="#" class="product-image">
                            <img src="../img/product-img/כד מים צרפתי,תחילת המאה ה-20 תמונה ראשונה.jpeg" class="cart-thumb" alt="">
                            <!-- Cart Item Desc -->
                            <div class="cart-item-desc">
                                <span class="product-remove"><i class="fa fa-close" aria-hidden="true"></i></span>
                                <span class="badge">כד מים</span>
                                <h6>כד מים צרפתי</h6>
                                <p class="size">גודל: גדול</p>
                                <p class="color">צבע: לבן</p>
                                <p class="price">ש"ח 120</p>
                            </div>
                        </a>
                    </div>

                    <!-- Single Cart Item -->
                    <div class="single-cart-item">
                        <a href="#" class="product-image">
                            <img src="img/product-img/כד מים קטן מעוטר צרפת, סוף המאה ה-19 תמונה ראשונה.jpeg" class="cart-thumb" alt="">
                            <!-- Cart Item Desc -->
                            <div class="cart-item-desc">
                                <span class="product-remove"><i class="fa fa-close" aria-hidden="true"></i></span>
                                <span class="badge">כד מים</span>
                                <h6>כד מים קטן מעוטר צרפת</h6>
                                <p class="size">גודל: קטן</p>
                                <p class="color">צבע: חום</p>
                                <p class="price">80 ש"ח</p>
                            </div>
                        </a>
                    </div>

                </div>

                <!-- Cart Summary -->
                <div class="cart-amount-summary">

                    <h2 class="text-right">סיכום</h2>
                    <ul class="summary-table">
                        <li><span>סכום כולל:</span> <span>200 ש"ח</span></li>
                        <li><span>משלוח:</span> <span>חינם</span></li>
                        <li><span>הנחה:</span> <span>-10%</span></li>
                        <li><span>סה"כ:</span> <span>180 ש"ח</span></li>
                    </ul>
                    <div class="checkout-btn mt-100">
                        <a href="*" class="btn essence-btn">מעבר לתשלום</a>
                    </div>
                </div>
            </div>
        </div>
        <!-- ##### Right Side Cart End ##### -->
        @RenderBody()

        <!-- ##### Bottom Area Start ##### -->
        <div class="OurBottomArea">
            <div class="responsive container">
                <div>
                    <p class="ourrightstext">כל הזכויות שמורות © נדוניה עתיקות 2018</p>
                </div>
            </div>
        </div>
        <!-- ##### Bottom Area End ##### -->
    </body>


</html>
