@model IEnumerable<NedunyaAntiquesWebApp.Models.Product>

@{
    ViewBag.Title = "Index";
}

    <h2>רשימת מוצרים</h2>

    <div class="text-left col-12 form-zone">
        <div class="row" style="margin:10px; padding-right:10px">
            <form asp-controller="Products" asp-action="Index">
                <p>
                    @Html.DropDownList("selectCat")
                    <input type="text" name="free" placeholder="חיפוש חופשי">
                    <input type="number" name="priceMax" placeholder="מחיר מקסימלי" />
                    <input type="number" name="priceMin" placeholder="מחיר מינימלי" />
                    <input type="number" name="hightMax" placeholder="גובה מקסימלי" />
                    <input type="number" name="hightMin" placeholder="גובה מינימלי" />
                    <input type="checkbox" name="onSale" /><b style="padding:5px">במבצע</b>
                    <input type="checkbox" name="canRent" /><b style="padding:5px">ניתן להשכרה</b>
                    <input type="submit" value="חיפוש" />
                </p>
            </form>
        </div>
    </div>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Substance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubCategory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Height)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Width)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Depth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sale)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiscountPercentage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rented)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RentalPriceForDay)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Substance)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubCategory)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Height)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Width)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Depth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sale)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiscountPercentage)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rented)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RentalPriceForDay)
                </td>
                <td>
                    @Html.ActionLink("ערוך", "Edit", new { id=item.ProductId }) |
                    @Html.ActionLink("פרטים נוספים", "Details", new { id=item.ProductId }) |
                    @Html.ActionLink("מחק", "Delete", new { id=item.ProductId })
                </td>
            </tr>
        }

    </table>

    <p>
        <input type="button" class="btn btn-success" value="צור מוצר חדש" onclick="location.href='@Url.Action("Create", "Products")'" />
        <!--    @Html.ActionLink("Create New", "Create")
            <button type="submit" value="Create" class="btn btn-success">צור מוצר</button>-->
    </p>
